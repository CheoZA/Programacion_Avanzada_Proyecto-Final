                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </li>
                        <li>
                            <a href="~/Home/Index"><i class="fa fa-home fa-fw"></i> Principal</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-car fa-fw"></i> Artículos<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="~/Genero/Index"><i class="fa fa-check fa-fw" style="color:#f0ad4e"></i>Géneros</a>
                                </li>
                                <li>
                                    <a href="~/Desarrollador/Index"><i class="fa fa-check fa-fw" style="color:#f0ad4e"></i>Desarrolladores</a>
                                </li>
                                <li>
                                    <a href="~/Juegos/BuscarJuegos"><i class="fa fa-search fa-fw" style="color:#f0ad4e"></i>Buscar Juegos</a>
                                </li>

                                <li>
                                    <a href="~/Juego/Index"><i class="fa fa-product-hunt fa-fw" style="color:#f0ad4e"></i>Juegos</a>
                                </li>
                                s
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="~/Factura/NuevaVenta"><i class="fa fa-shopping-cart fa-fw" style="color:#f0ad4e"></i>Nueva Venta</a>
                        </li>
                        <li>
                            <a href="~/Cliente/Index"><i class="fa fa-user fa-fw"></i> Clientes</a>
                        </li>
                        <li>
                            <a href="~/Vendedor/Index"><i class="fa fa-user fa-fw"></i> Vendedores</a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <div id="page-wrapper">
            <!-- /.row -->

            <div class="row">
                @RenderBody()
            </div>

        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="~/Assets/jquery/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Assets/bootstrap/js/bootstrap.min.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/Assets/metisMenu/metisMenu.min.js"></script>
    <!-- Morris Charts JavaScript -->

    <script src="~/Assets/morrisjs/morris.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="~/Js/sb-admin-2.js"></script>


