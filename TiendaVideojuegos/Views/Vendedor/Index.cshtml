@model List<TiendaVideojuegos.Models.Vendedor>
@{
    ViewBag.Title = "Lista de Vendedores";
}

<h2 class="text-center text-success">Listado de Vendedores</h2>
<div class="well well-sm"><a class="btn btn-primary" href="~/Vendedor/Create">Nuevo</a></div>
<table class="table table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Teléfono</th>
            <th colspan="3">Operaciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vendedor in Model)
        {
            <tr>
                <td>@vendedor.IdVendedor</td>
                <td>@vendedor.Nombre</td>
                <td>@vendedor.ApellidoPaterno @vendedor.ApellidoMaterno</td>
                <td>@vendedor.Telefono</td>
                <td><a class="btn btn-success" href="~/Vendedor/Find/@vendedor.IdVendedor"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                <td><a class="btn btn-info" href="~/Vendedor/Update/@vendedor.IdVendedor"><span class="fa fa-edit"></span></a></td>
                <td><a class="btn btn-danger" href="~/Vendedor/Delete/@vendedor.IdVendedor"><span class="fa fa-remove"></span></a></td>
            </tr>
        }
    </tbody>

</table>


