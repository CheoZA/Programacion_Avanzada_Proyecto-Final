@model List<TiendaVideojuegos.Models.Desarrollador>

@{
    ViewBag.Title = "Lista de desarrolladores";
}

<h2 class="text-center text-success">Listado de Categorias</h2>
<div class="well well-sm"><a class="btn btn-primary" href="~/Desarrollador/Create">Nuevo</a></div>
<table class="table table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>Id</th>
            <th>Nombre</th>
            <th colspan="3">Operaciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var desarrollador in Model)
        {
            <tr>
                <td>@desarrollador.IdDesarrollador</td>
                <td>@desarrollador.NombreDesarrollador</td>
                <td><a class="btn btn-success" href="~/Desarrollador/Find/@desarrollador.IdDesarrollador"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                <td><a class="btn btn-info" href="~/Desarrollador/Update/@desarrollador.IdDesarrollador"><span class="fa fa-edit"></span></a></td>
                <td><a class="btn btn-danger" href="~/Desarrollador/Delete/@desarrollador.IdDesarrollador"><span class="fa fa-trash-o"></span></a></td>
            </tr>
        }
    </tbody>

</table>
@{
    if (!string.IsNullOrEmpty(ViewBag.MensajeError))
    {
        <div class="text-primary text-danger text-center">>@ViewBag.MensajeError</div>
    }
}