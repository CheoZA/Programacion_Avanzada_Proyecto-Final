
<link href="~/Assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />


@using TiendaVideojuegos.Models

@model List<Cliente>
@{
    ViewBag.Title = "Buscar clinete";
    Layout = null;
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {

        $("#tbcliente tbody tr").dblclick(function () {
            var Cliente = {};
            var n, a,m;
            n = Cliente.Codigo = $(this).children().eq('0').text();
            a = Cliente.DatosPersonales = $(this).children().eq('1').text() + " " + $(this).children().eq('2').text();
            m = Cliente.Identificacion = $(this).children().eq('3').text();
            console.info(a, n,m);
            window.opener.obtenerCliente(Cliente);
            window.close();
        });
    });
</script>

<div class="panel panel-default">
    <div class="panel-heading">Buscar Clientes</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <h2 style="text-align:center; font-family:Arial; font-weight:700;">Buscar Cliente por:</h2>
                <fieldset>
                    <div class="row" style="padding-bottom:8px;">
                        <div class="form-group col-md-3">
                            @Html.Label("Nombre", new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBox("txtNombre", null, new { @class = "form-control" })
                            </div>
                        </div>


                        <div class="form-group col-md-3">
                            @Html.Label("Apellido", new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBox("txtApe", null, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>

            <input type="submit" value="Buscar" />
        }
    </div>
</div>

<table class="table table-striped" id="tbcliente">

    <thead>
        <tr>
            <th>Id</th>
            <th>Tipo</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Telefono</th>
            <th>Direccion</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.IdCliente</td>
                <td>@cliente.Nombre</td>
                <td>@cliente.Apellido</td>
                <td>@cliente.Telefono</td>
                <td>@cliente.Direccion</td>
            </tr>
        }
    </tbody>
</table>
<script src="~/Assets/bootstrap/js/bootstrap.min.js"></script>
