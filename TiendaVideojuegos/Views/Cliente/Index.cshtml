@model List<TiendaVideojuegos.Models.Cliente>
@{
    ViewBag.Title = "Lista de Clientes";
}


<h2 class="text-center text-success">Listado de Clientes</h2>
<div class="well well-sm"><a class="btn btn-primary" href="~/Cliente/Create">Nuevo</a></div>
<table class="table table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>Id</th>
            <th>Tipo</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Teléfono</th>
            <th>Direccion</th>
            <th colspan="3">Operaciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
        <tr>

            <td>@cliente.IdCliente</td>
            <td>@cliente.TipoCliente</td>
            <td>@cliente.Nombre</td>
            <td>@cliente.Apellido</td>
            <td>@cliente.Telefono</td>
            <td>@cliente.Direccion</td>
            <td><a class="btn btn-success" href="~/Cliente/Find/@cliente.IdCliente"><span class="glyphicon glyphicon-eye-open"></span></a></td>
            <td><a class="btn btn-info" href="~/Cliente/Update/@cliente.IdCliente"><span class="fa fa-edit"></span></a></td>
            <td><a class="btn btn-danger" href="~/Cliente/Eliminar/@cliente.IdCliente"><span class="fa fa-book"></span></a></td>
        </tr>
        }
    </tbody>

</table>