@model TiendaVideojuegos.Models.Cliente
@{
    ViewBag.Title = Model.Nombre + ' ' + Model.Apellido;
}

<ol class="breadcrumb">
    <li><a href="~/">Clientes</a></li>
    <li class="active">@(Model.Nombre + ' ' + Model.Apellido)</li>

</ol>

<div class="panel panel-default">
    <div class="panel-heading">Informacion Personal</div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>Id</dt>
            <dd>@Model.IdCliente</dd>

            <dt>Tipo</dt>
            <dd>@(Model.TipoCliente)</dd>

            <dt>Nombre</dt>
            <dd>@Model.Nombre</dd>

            <dt>Apellido</dt>
            <dd>@(Model.Apellido)</dd>

            <dt>Teléfono</dt>
            <dd>@Model.Telefono</dd>

            <dt>Direccion</dt>
            <dd>@Model.Direccion</dd>
        </dl>
    </div>
    <div class="form-actions">
        |@Html.ActionLink("Regresar al Listado", "Index")
    </div>
</div>